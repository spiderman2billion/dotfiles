#! /usr/bin/env bash

# DESCRIPTION
# Installs Homebrew Casks.
installCask () {
  fileName="/Applications/$1.app"
  echo -n "checking $fileName"
  if [ ! -d "$fileName" ] ; then
    brew cask install $2 ;
  else
    echo " - installed"
  fi
}
installCask 'Alfred 3' alfred
installCask 'Adobe Acrobat' adobe-acrobat-reader
installCask 'Bartender 2' bartender
installCask 'BitBar' bitbar
installCask 'EndNote' endnote
